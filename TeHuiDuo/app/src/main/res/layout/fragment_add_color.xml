<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="16dp"
             tools:context="com.jeegoo.o2o.tehuiduo.AddColorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/productColorEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/product_color_name"
            android:singleLine="true"
            android:textSize="20sp"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="@string/product_color_name"/>

        <GridView
            android:id="@+id/colorTableGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:columnWidth="48dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="4dp"/>
    </LinearLayout>

</FrameLayout>
